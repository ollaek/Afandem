    <div class="content">
        <div class="container-fluid">

            <div class="row">
                <div class="col-lg-12 col-md-12">
                    <div class="card card-nav-tabs">
                        <div class="card-header" data-background-color="purple">
                            <h4 class="title">Pending Requests</h4>
                            <p class="category">All Employees Pending Requests</p>


                            <hr>
                            <div class="row">

                                <div class="col-lg-2">Date</div>
                                <div class="col-lg-2">Code</div>
                                <div class="col-lg-2">Employee Name</div>
                                <div class="col-lg-2">Type</div>
                                <div class="col-lg-2">Details</div>
                                <div class="col-lg-2">Status</div>


                            </div>
                        </div>
                        <div class="card-content table-responsive">



                            @foreach(var x in ViewBag.req) { 

                            <div style="margin-top: 5px">
                                <div class="row">

                                    <div class="col-md-12">
                                        <div class="alert ">
                                            <div class="row">

                                                <div class="col-lg-2">@x.RequestDate</div>
                                                <div class="col-lg-2">@x.User.Code</div>
                                                <div class="col-lg-2">@x.User.Name</div>
                                                <div class="col-lg-2">@x.Type</div>
                                                <div class="col-lg-2"> <a href="#" rel="tooltip" title="More Details"><i class="material-icons" r>more_horiz</i></a></div>
                                                <div class="col-lg-1">
                                                    <a href="@Url.Action("Accept","Request",new { id = x.Id })" rel="tooltip" title="Accept Request">
                                                        <i class="material-icons">offline_pin</i>
                                                    </a>
                                                </div>
                                                <div class="col-lg-1">
                                                    <a href="@Url.Action("reject","Request",new { id = x.Id })" rel="tooltip" title="Reject Request">
                                                        <i class="material-icons">highlight_off</i>
                                                    </a>
                                                </div>

                                            </div>


                                        </div>


                                    </div>

                                </div>
                            </div>
                            }
                      
                        </div>






                    </div>
                </div>
            </div>
        </div>
