    <div class="content">
        <div class="container-fluid">

            <div class="row">
                <div class="col-lg-12 col-md-12">
                    <div class="card card-nav-tabs">
                        <div class="card-header" data-background-color="purple">
                            <div class="nav-tabs-navigation">
                                <div class="nav-tabs-wrapper ">
                                    <div class="row">
                                        <span class="nav-tabs-title col-lg-2 col-lg-offset-1"><strong>Requests:</strong></span>
                                        <ul class="nav nav-tabs" data-tabs="tabs">
                                            <li class="active col-lg-3">
                                                <a href="#mm" data-toggle="tab">
                                                    <i class="material-icons">attach_money</i> Loan
                                                    <div class="ripple-container"></div>
                                                </a>
                                            </li>
                                            <li class="col-lg-3">
                                                <a href="#messages" data-toggle="tab">
                                                    <i class="material-icons">airplanemode_active</i> Vacation
                                                    <div class="ripple-container"></div>
                                                </a>
                                            </li>
                                            <li class="col-lg-3">
                                                <a href="#settings" data-toggle="tab">
                                                    <i class="material-icons">create</i> Open
                                                    <div class="ripple-container"></div>
                                                </a>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="card-content">
                            <div class="tab-content">
                                <div class="tab-pane active" id="mm">
                             
                                  @using (Html.BeginForm())
                                  {
                                    @Html.AntiForgeryToken()
                                    
                                        <div class="row">
                                            <div class="col-md-6 col-md-offset-3">
                                                <div class="form-group label-floating">
                                                    <label class="control-label">Code</label>
                                                    <input type="text" class="form-control" value="@ViewBag.user.Code" disabled>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-6 col-md-offset-3">
                                                <div class="form-group label-floating">
                                                    <label class="control-label">Name</label>
                                                    <input type="text" class="form-control" value="@ViewBag.user.Name" disabled>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-6 col-md-offset-3">
                                                <div class="form-group label-floating">
                                                    <label class="control-label">Base Salary</label>
                                                    <input type="text" class="form-control" value="@ViewBag.user.BaseSalary" disabled>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="row">
                                            <div class="col-md-6 col-md-offset-3">
                                                <div class="form-group label-floating">
                                                    <label class="control-label">Loan Ammount <small>(ex : 200.00)</small></label>
                                                    @Html.TextBoxFor(model => model.Loan, htmlAttributes: new { @class = "form-control", @type = "text" })
       
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-6 col-md-offset-3">
                                                <div class="form-group label-floating">
                                                    <label class="control-label">Request Date</label>
                                                    <input type="text" class="form-control" value="@ViewBag.reqdate" disabled>
                                                </div>
                                            </div>
                                        </div>


                                        <hr />
                                        <button type="submit" class="btn btn-primary pull-right">Submit</button>
                                        <div class="clearfix"></div>
                                  }
                                </div>

                                <div class="tab-pane" id="messages">
                                    @using (Html.BeginForm())
                                    {
                                        @Html.AntiForgeryToken()

                                        <div class="row">
                                            <div class="col-md-6 col-md-offset-3">
                                                <div class="form-group label-floating">
                                                    <label class="control-label">Employee Code</label>
                                                    <input type="text" class="form-control" value="@ViewBag.user.Code" disabled>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-6 col-md-offset-3">
                                                <div class="form-group label-floating">
                                                    <label class="control-label">Name</label>
                                                    <input type="text" class="form-control" value="@ViewBag.user.Name" disabled>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-6 col-md-offset-3">
                                                <div class="form-group label-floating">
                                                    <label class="control-label">Base Salary</label>
                                                    <input type="text" class="form-control" value="@ViewBag.user.BaseSalary" disabled>
                                                </div>
                                            </div>
                                        </div>


                                        <div class="row">
                                            <div class="col-md-6 col-md-offset-3">
                                                <div class="form-group label-floating">
                                                    <label class="control-label">Vacation Start Date</label>
                                                    @Html.TextBoxFor(model => model.Start, htmlAttributes: new { @class = "form-control", @type = "text" })
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-6 col-md-offset-3">
                                                <div class="form-group label-floating">
                                                    <label class="control-label">Vacation End Date</label>
                                                    @Html.TextBoxFor(model => model.End, htmlAttributes: new { @class = "form-control", @type = "text" })
                                                </div>
                                            </div>
                                        </div>



                                        <div class="row">
                                            <div class="col-md-6 col-md-offset-3">
                                                <div class="form-group label-floating">
                                                    <label class="control-label">Request Date</label>
                                                    <input type="text" class="form-control" value="@ViewBag.reqdate" disabled>
                                                </div>
                                            </div>
                                        </div>


                                        <hr />
                                        <button type="submit" class="btn btn-primary pull-right">Submit</button>
                                        <div class="clearfix"></div>
                                    }
                                </div>

                                <div class="tab-pane" id="settings">
                                    @using (Html.BeginForm())
                                    {
                                        @Html.AntiForgeryToken()

                                        <div class="row">
                                            <div class="col-md-6 col-md-offset-3">
                                                <div class="form-group label-floating">
                                                    <label class="control-label">Employee Code</label>
                                                    <input type="text" class="form-control" value="@ViewBag.user.Code" disabled>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-6 col-md-offset-3">
                                                <div class="form-group label-floating">
                                                    <label class="control-label">Name</label>
                                                    <input type="text" class="form-control" value="@ViewBag.user.Name" disabled>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-6 col-md-offset-3">
                                                <div class="form-group label-floating">
                                                    <label class="control-label">Base Salary</label>
                                                    <input type="text" class="form-control" value="@ViewBag.user.BaseSalary" disabled>
                                                </div>
                                            </div>
                                        </div>


                                        <div class="row">
                                            <div class="col-md-6 col-md-offset-3" style="border: 1px solid #d3d3d3; border-radius: 5px">


                                                <div class="form-group label-floating">
                                                    <label class="control-label">Type Your Request</label>
                                                   
                                                    @Html.TextAreaFor(model => model.Desc, htmlAttributes: new { @class = "form-control", @rows = "6" })
                                                </div>

                                            </div>
                                        </div>




                                        <div class="row">
                                            <div class="col-md-6 col-md-offset-3">
                                                <div class="form-group label-floating">
                                                    <label class="control-label">Request Date</label>
                                                    <input type="text" class="form-control" value="@ViewBag.reqdate" disabled>
                                                </div>
                                            </div>
                                        </div>


                                        <hr />
                                        <button type="submit" class="btn btn-primary pull-right">Submit</button>
                                        <div class="clearfix"></div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div></div>