    <div class="content">
        <div class="container-fluid">

            <div class="row">
                <div class="col-lg-12 col-md-12">
                    <div class="card card-nav-tabs">
                        <div class="card-header" data-background-color="purple">
                            <h4 class="title">Submitted Requests</h4>
                            <p class="category">Your Submitted Requests History</p>


                            <hr>
                            <div class="row">

                                <div class="col-lg-3">Date</div>
                                <div class="col-lg-3">Type</div>
                                <div class="col-lg-3">Details</div>
                                <div class="col-lg-3">Status</div>


                            </div>
                        </div>
                        <div class="card-content table-responsive">


                            @foreach (var x in ViewBag.myreq)
                            {

                                if (x.State == 1)
                                {
                                    <div style="margin-top: 5px">
                                        <div class="row">

                                            <div class="col-md-12">
                                                <div class="alert alert-warning">
                                                    <div class="row">

                                                        <div class="col-lg-3">@x.RequestDate</div>

                                                        <div class="col-lg-3">@x.Type</div>
                                                        <div class="col-lg-3"> <a href="#" rel="tooltip" title="More Details"> <i class="material-icons">more_horiz</i></a></div>
                                                        <div class="col-lg-3">
                                                            Pending
                                                        </div>

                                                    </div>


                                                </div>


                                            </div>

                                        </div>
                                    </div>
                                }
                                else if (x.State == 2)
                                {
                                    <div style="margin-top: 5px">
                                        <div class="row">

                                            <div class="col-md-12">
                                                <div class="alert alert-success">
                                                    <div class="row">

                                                        <div class="col-lg-3">@x.RequestDate</div>

                                                        <div class="col-lg-3">@x.Type</div>
                                                        <div class="col-lg-3"> <a href="#" rel="tooltip" title="More Details"> <i class="material-icons">more_horiz</i></a></div>
                                                        <div class="col-lg-3">
                                                            Accepted
                                                        </div>


                                                    </div>


                                                </div>


                                            </div>

                                        </div>
                                    </div>

                                }
                                else if (x.State == 3)
                                {

                                    <div style="margin-top: 5px">
                                        <div class="row">

                                            <div class="col-md-12">
                                                <div class="alert alert-danger ">
                                                    <div class="row">
                                                        <div class="col-lg-3">@x.RequestDate</div>

                                                        <div class="col-lg-3">@x.Type</div>
                                                        <div class="col-lg-3"> <a href="#" rel="tooltip" title="More Details"> <i class="material-icons">more_horiz</i></a></div>
                                                        <div class="col-lg-3">
                                                            Rejected
                                                        </div>

                                                    </div>


                                                </div>


                                            </div>

                                        </div>
                                    </div>


                                }

                            }



                        </div>


                    </div>
                </div>
            </div>
        </div>
